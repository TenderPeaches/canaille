<%= content_tag :main, class: "container" do %>
    <%= content_tag :div, class: "list__header" do %>
        <%= content_tag :h1 do %>
            <%= t('models.service_provider.list_title') %>
        <% end %>
        <%= link_to "New service_provider", new_service_provider_path, class: "button", data: { turbo_frame: dom_id(ServiceProvider.new) } %>
    <% end %>
    <%= turbo_frame_tag "service_providers" do %>
        <%= turbo_frame_tag "new_service_provider" do %><% end %>
        <%= content_tag :div, class: "service_providers" do %>
            <%= turbo_frame_tag ServiceProvider.new %>
            <%= render @service_providers if @service_providers %>
        <% end %>
    <% end %>
<% end %>