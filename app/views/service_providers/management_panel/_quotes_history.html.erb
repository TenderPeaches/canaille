
<%= turbo_frame_tag 'quotes-history' do %>
    <% unless service_provider.quote_history.empty? %>
        <%= tag.h3 t('models.service_provider.quote_history') %>
        <%= tag.table do %>
            <%= tag.thead do %>
                <%= tag.tr do %>
                    <%= tag.th t('models.service.model_name') %>
                    <%= tag.th t('models.service_quote.price') %>
                    <%= tag.th t('models.service_quote_status.model_name') %>
                    <%= tag.th t('models.service_quote.created_at') %>
                <% end %>
            <% end %>
            <%= tag.tbody do %>
                <% service_provider.quote_history.each do |quote| %>
                    <%= tag.tr do %>
                        <%= tag.td quote.service_request.service.label %>
                        <%= tag.td to_currency(quote.price) %>
                        <%= tag.td quote.status.label %>
                        <%= tag.td datetime_format(quote.created_at) %>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>