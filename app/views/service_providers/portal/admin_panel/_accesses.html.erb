<%= tag.section class: 'user-accesses', data: { test_id: "service-provider-user-accesses"} do %>
    <%= tag.h3 t('models.user_service_provider_access.list_title') %>
    <%= tag.div class: "section__actions" do %>
        <%= turbo_link_button t('models.user_service_provider_access.create_title'), new_service_provider_access_path(service_provider) %>
    <% end %>
    <%= tag.div class: "section__form", id: "user-service-provider-access-form" %>
    <%= tag.div id: "user-service-provider-accesses" do %>
        <% service_provider.active_accesses.each do |access| %>
            <%= render "user_service_provider_accesses/user_service_provider_access", user_service_provider_access: access, can_edit: (current_user.is_service_provider_admin? service_provider) %>
        <% end %>
    <% end %>
<% end %>