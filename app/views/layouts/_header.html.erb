<%= content_tag :div, class: "header-logo" do %>
    <%= link_to 'Home', root_path %>
    <%# logo/image title %>
<% end %>
<%= content_tag :div, class: "header-nav" do %>
    <% if user_signed_in? # if logged in %>
        <% if current_user.client %>
            <%= link_to t('models.client.model_name'), client_portal_path %>
        <% end %>
        <% if current_user.has_service_provider_access? %>
            <%= link_to current_user.user_service_provider_accesses.count == 1 ? current_user.user_service_provider_accesses.first.service_provider.name : "#{t('keywords.my_blank', mine: t('models.service_provider.list_title'))}", user_service_providers_path %>
        <% end %>
        <%= link_to t('cta.log_out'), destroy_user_session_path, data: { turbo_method: :delete } %>
    <% else %>
        <%= link_to t('cta.log_in'), new_user_session_path %>
        <%= link_to t('cta.register'), new_user_registration_path %>
    <% end %>
    <%# link_to t('cta.log_out'), signup_path %>
<% end %>