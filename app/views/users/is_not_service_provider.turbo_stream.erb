<%= turbo_stream.replace "is-client" do %>
    <%# enforce is_client to true if not a service provider, because then why sign up? %>
    <%= check_box_tag :is_client, 1, 1, { id: "is-client", readonly: true, name: "user[is_client]" } %>
<% end %>
<%# use a hidden field instead, since disabled inputs don't submit their value to the form %>
<%= turbo_stream.replace "user-is-client" do %>
    <%= hidden_field_tag :is_client, true, { id: "user_is_client" } %>
<% end %>