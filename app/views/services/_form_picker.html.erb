<%# services/_form_picker.html.erb > form input to select a category, 'form' %>
<%= turbo_frame_tag "service-picker" do %>
    <%# using a service-category picker to filter down services %>
    <%= render partial: 'service_categories/pick', locals: { category: service ? service.service_category : nil } %>

    <%= turbo_frame_tag "services-picker-select" do %>
        <% if service %>
            <%= tag.label do %>
                <%= t('models.service.model_name') %>
            <% end %>
            <%= form.collection_select :service_id, service.service_category.services, :id, :label, {}, { id: 'service-picker' }%>
        <% else %>
            <%= tag.label %>
            <%= form.collection_select :service_id, Service.all, :id, :label, {}, { id: 'service-picker' } %>
        <% end %>
    <% end %>
<% end %>