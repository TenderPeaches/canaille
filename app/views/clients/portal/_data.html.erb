<%= tag.div id: "clients-data" do %>
    <%= content_tag :div, class: "card" do %>  
        <%= content_tag :h4, t('models.client.coordinate') %>
        <%= tag.div id: "client-coordinate" do %>
            <%= render partial: "coordinates/data", locals: { coordinate: client.coordinate } %>
            <%= tag.div class: "actions" do %>
                <% if client.coordinate %>
                    <%= turbo_link_button t("keywords.edit"), edit_client_coordinate_path(client) %>
                    <%= turbo_link_button t("keywords.remove"), client_coordinate_path(client), :delete %>
                <% else %>
                    <%= turbo_link_button t('keywords.add_blank', thing: t('models.coordinate.model_name')), new_client_coordinate_path(client) %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>