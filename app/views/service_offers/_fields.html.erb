<%= service_picker(form, form.object&.service.service_category, form.object&.service) %>
<%= tag.div class: "field field--min-price" do %>
    <%= form.label :min_price, t('models.service_offer.min_price') %>
    <%= tag.span class: "form__group" do %>
        <%= form.number_field :min_price, min: 0, step: 1 %>
        <%= tag.span class:"field__suffix" do %>$<% end %>
    <% end %>
<% end %>
<%= form.field :description, as: :text %>