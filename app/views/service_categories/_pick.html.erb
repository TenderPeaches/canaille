<%= turbo_frame_tag "service-category-picker" do %>
    <%= content_tag :div, class: "service-category-picker" do %>
        <%= render partial: "service_categories/breadcrumbs", locals: { breadcrumbs_categories: local_assigns[:service_category]&.breadcrumbs || [] } %>
        <%= render partial: "service_categories/carousel", locals: { carousel_categories: local_assigns[:service_category]&.subcategories || ServiceCategory.top_level } %>
    <% end %>
<% end %>