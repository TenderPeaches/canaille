<%= turbo_stream.update "client-coordinate" do %>
    <%= form_with model: client, url: client_coordinate_path(client.id) do |form| %>
        <%= form.fields_for :coordinate do |coordinate_form| %>
            <%= render partial: "coordinates/fields", locals: { form: coordinate_form } %>
            <%= form.submit coordinate_form.object.new_record? ? t('keywords.set_blank', set: t('models.coordinate.model_name')) : t('keywords.update_blank', updated: t('models.coordinate.model_name')) %>
            <%= turbo_link_button t('keywords.cancel'), new_client_coordinate_edit_cancellation_path(client) %>
        <% end %>
    <% end %>
<% end %>