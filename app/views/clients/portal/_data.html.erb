<%= tag.div id: "clients-data" do %>
    <%= content_tag :div, class: "card" do %>  
        <%= content_tag :h4, t('models.client.coordinate') %>
        <%= tag.div id: "client-coordinate" do %>
            <%= render partial: "coordinates/data", locals: { coordinate: client.coordinate } %>
            <%= tag.div class: "actions" do %>
                <% if client.coordinate %>
                    <%= link_to t("keywords.edit"), edit_client_coordinate_path(client), class: "button", data: { turbo_stream: true } %>
                    <%= link_to t("keywords.remove"), client_coordinate_path(client), class: "button", data: { turbo_stream: true, turbo_method: :delete } %>
                <% else %>
                    <%= link_to t('keywords.add_blank', thing: t('models.coordinate.model_name')), new_client_coordinate_path(client), class: "button", data: { turbo_stream: true } %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>