<%= content_tag :div, class: "form__group" do %>
    <%= turbo_link_button t('models.service_request.use_client_address'), new_service_request_coordinate_choice_path(use_client_address: true) %>
    
    <%= turbo_link_button t('models.service_request.use_unique_address'), new_service_request_coordinate_choice_path(use_unique_address: true, service_request_id: local_assigns[:service_request_id] ? service_request_id : nil) %>
<% end %>
<%= tag.h4 id: "coordinate-choice-label" do %>
    <% if current_user&.client %>
        <%= t('feedback.service_request.using_client_address') %>
    <% else %>
        <%= t('feedback.service_request.using_unique_address') %>
    <% end %>
<% end %>