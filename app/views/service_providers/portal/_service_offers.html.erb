<%= tag.h3 t('models.service_offer.list_title') %>

<%= tag.div class: "section__actions" do %>
    <%= turbo_link_button t('models.service_offer.create_title'), new_service_provider_service_offer_path(service_provider) %>
<% end %>
<%= tag.div id: "service-offer-form", class: "section__form" %>
<%= tag.div id: "service-offers" do %>
    <% service_provider.service_offers.each do |service_offer| %>
        <%= render service_offer, can_edit: (current_user.is_service_provider_admin? service_provider) %>
    <% end %>
<% end %>