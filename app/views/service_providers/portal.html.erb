<%= tag.main class: "portal portal--service-provider", data: { test_id: 'service-provider-portal' } do %>
    <%= tag.h1 @service_provider.name %>
    <%= tag.section class: "card v-flex", data: { test_id: "active-quotes"} do %>
        <%= tag.h3 t('models.service_quote.list_title') %>
        <%= render partial: "service_providers/active_quotes", locals: { service_provider: @service_provider } %>
        <%= turbo_frame_tag 'browse-service-requests' do %>
            <%= link_to t('cta.find_service_requests'), browse_service_requests_as_service_provider_path(@service_provider), class: "button" %>
        <% end %>
    <% end %>

    <%= tag.section class: "card", data: { test_id: "info" } do %>
        <%= @service_provider.schedule %>
        <%= @service_provider.phone_number %>
        <%= render partial: "coordinates/card", locals: { coordinate: @service_provider.coordinate } %>
    <% end %>
    <%= tag.section class: "card", data: { test_id: "service-offers" } do %>
        <%= render partial: "service_providers/service_offers", locals: { service_provider: @service_provider } %>
    <% end %>
    <% if current_user.is_service_provider_admin? @service_provider %>
        <%= render partial: 'service_providers/management_panel/management_panel', locals: { service_provider: @service_provider } %>
    <% end %>
<% end %>