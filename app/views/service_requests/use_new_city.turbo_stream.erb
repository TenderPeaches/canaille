<%= turbo_stream.update "city-select" %>
<%= turbo_stream.update "city-form" do %>  
    <% ActionController::Base.helpers.fields model: @service_request do |form| %>
        <%= form.fields_for :coordinate do |coordinate_form| %>
            <%= coordinate_form.fields_for :city do |city_form| %>
                <%= render partial: "cities/fields", locals: { form: city_form } %>
            <% end %>
        <% end %>
    <% end %>
<% end %>