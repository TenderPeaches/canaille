<%# service provider business name %>
<%= content_tag :div, class: "field field--name" do %>
    <%= form.label :name, t('models.service_provider.name') %>
    <%= form.text_field :name %>
<% end %>
<%# business description / word from the owner %>
<%= content_tag :div, class: "field field--description" do %>
    <%= form.label :description, t('models.service_provider.description') %>
    <%= form.text_area :description %>
<% end %>
<%# schedule: contact hours, business hours, etc. %>
<%= content_tag :div, class: "field field--schedule" do %>
    <%= form.label :schedule, t('models.service_provider.schedule') %>
    <%= form.text_area :schedule %>
<% end %>
<%# contact info: phone %>
<%= content_tag :div, class: "field field--phone-number" do %>
    <%= form.label :phone_number, t('models.service_provider.phone_number') %>
    <%= form.text_field :phone_number %>
<% end %>
<%# contact_info: email %>
<%= content_tag :div, class: "field field--email-address" do %>
    <%= form.label :email_address, t('models.service_provider.email_address') %>
    <%= form.text_field :email_address %>
<% end %>
<%# coordinates (optional) %>
<%= content_tag :div, id: "coordinate-form" do %>
    <%= form.fields_for :coordinate do |coordinate_form| %>
        <%= content_tag :div, class: "coordinate-form" do %>
            <%= content_tag :h3, class: "form__header" do %>
                <%= "#{t('models.coordinate.create_title')} (#{t('keywords.optional')})" %>
            <% end %>
            <%= render partial: "coordinates/fields", locals: { form: coordinate_form } %>
        <% end %>
    <% end %>
<% end %>