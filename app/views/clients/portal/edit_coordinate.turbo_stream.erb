<%= turbo_stream.replace "client-coordinate" do %>
    <%= form_with model: @client, url: update_coordinate_client_path do |form| %>
        <%= form.fields_for :coordinate do |coordinate_form| %>
            <%= render partial: "coordinates/fields", locals: { form: coordinate_form } %>
            <%= form.submit t('keywords.update_blank', updated: t('models.coordinate.model_name')) %>
            <%= link_to t('keywords.cancel'), cancel_edit_coordinate_client_path(@client.id), class: "button", data: { turbo_stream: true } %>
        <% end %>
    <% end %>
<% end %>