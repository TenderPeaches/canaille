<%= turbo_frame_tag "coordinate-data" do %>
    <% if coordinate %>
        <%= content_tag :div, class: "data-line" do %>
            <%= coordinate.address_line %>
        <% end %>
        <%= content_tag :div, class: "data-line" do %>
            <%= coordinate.city_line %>
        <% end %>
        <%= content_tag :div, class: "data-line" do %>
            <%= coordinate.postal_code_line %>
        <% end %>
        <%= content_tag :div, class: "data-line" do %>
            <%= coordinate.notes %>
        <% end %>
    <% else %>
        <%= t('keywords.no_blank', thing: t('models.coordinate.model_name').downcase) %>
    <% end %>
<% end %>