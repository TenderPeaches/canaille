<%= turbo_stream.update "client-coordinate" do %>
    <%= render partial: "coordinates/data", locals: { coordinate: client.coordinate } %>
    <%= tag.div class: "actions" do %>
        <% if client.coordinate %>
            <%= turbo_link_button t("keywords.edit"), edit_client_coordinate_path(client)
            <%= turbo_link_button t("keywords.remove"), client_coordinate_path(client), :delete %>
        <% else %>
            <%= turbo_link_button t('keywords.create'), new_client_coordinate_path(client) %>
        <% end %>
    <% end %>
<% end %>