<%= turbo_stream.replace "service-request-coordinate" do %>
    <%= content_tag :div, class: "service-request-unique-coordinate" do %>
        <% form_with model: @service_request do |form| %>
            <%= form.fields_for :coordinate do |coordinate_form| %>
                <%= render partial: 'coordinates/fields', locals: { form: coordinate_form } %>
            <% end %>
        <% end %>
    <% end %>
<% end %>