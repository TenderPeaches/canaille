<%= turbo_stream.update "city-select" %>
<%= turbo_stream.update "city-form" do %>  
    <% form_for @service_request do |form| %>
        <%= form.fields_for :client do |client_form| %>
            <%= client_form.fields_for :coordinate do |client_coordinate_form| %>
                <%= client_coordinate_form.fields_for :city do |city_form| %>
                    <%= render partial: "cities/fields", locals: { form: city_form } %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>