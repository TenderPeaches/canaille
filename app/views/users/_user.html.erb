<%= turbo_frame_tag user do %>
    <%= content_tag :div, class: "user" do %>
        <%= link_to user.username, user_path(user), data: { turbo_frame: "_top" } %>
        <%= content_tag :div, class: "actions" do %>
            <%= button_to "Delete", user_path(user), method: :delete %>
            <%= link_to "Edit", edit_user_path(user), class: "button" %>
        <% end %>
    <% end %>
<% end %>