<%# only allow to pick user if access doesn't already exist; must create a new one instead %>
<% if form.object.new_record? %>
    <%= tag.div class: "field field--user" do %>
        <%= form.label :user, t('models.user_service_provider_access.user') %>
        <%= form.text_field :user %>
    <% end %>
<% end %>

<%= tag.div class: "field field--role" do %>
    <%= form.label :user_role, t('models.user_service_provider.access.role') %>
    <%= form.collection_select :user_role_id, UserRole.all, :id, :name, 1 %>
<% end %>

<%= form.hidden_field :grantor_id %>
<%= form.hidden_field :service_provider_id %>