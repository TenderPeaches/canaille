<%= content_tag :main, class: "container" do %>
    <%= content_tag :div, class: "list__header" do %>
        <%= content_tag :h1 do %>
            <%= t('models.service.list_title') %>
        <% end %>
        <%= turbo_frame_tag "new_service" do %>
        <% end %>
        <%= link_to "New service", new_service_path, class: "button", data: { turbo_frame: dom_id(Service.new) } %>
    <% end %>
    <%= turbo_frame_tag "services" do %>
        <%= content_tag :div, class: "services" do %>
            <%= turbo_frame_tag Service.new %>
            <%= render @services if @services %>
        <% end %>
    <% end %>
<% end %>