<%= turbo_stream.update "city-select" do %>
    <% form_for @service_request do |form| %>
        <%= form.fields_for :client do |client_form| %>
            <%= client_form.fields_for :coordinate do |client_coordinate_form| %>
                <%= client_coordinate_form.label t('models.coordinate.city') %>
                <%= client_coordinate_form.collection_select :city_id, City.all, :id, :name %>   
        <% end %>
    <% end %>
<% end %>
<%= turbo_stream.update "city-form" %>