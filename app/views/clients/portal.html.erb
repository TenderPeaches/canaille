<%= tag.div class: "portal" do %>
    <%= content_tag :h1 do %>
        <%= t('keywords.welcome', name: @user.username) %>
    <% end %>
    <%= content_tag :div, class: "client-data" do %>
        <%= render partial: "clients/data", locals: { client: @user.client, allow_edit: true } %>
    <% end %>
    <%= turbo_frame_tag "service-requests" do %>
        <%= tag.div class: "service-requests-list" do %>
            <% if @user.client.active_service_requests %>
                <%= render partial: "clients/service_requests_list", locals: { service_requests: @user.client.active_service_requests } %>
            <% else %>
                <%= t('feedback.client.no_active_service_request') %>
            <% end %>
        <% end %>
    <% end %>
    <%= tag.div class: "menu" do %>
        <%= turbo_frame_tag "new-service-request" do %>
            <%= link_to t('models.service_request.create_title'), new_service_request_path, class: "button", data: { turbo: false } %>
        <% end %>
        <%= turbo_frame_tag "new-service-provider" do %>
            <%= link_to t('models.service_provider.create_title'), new_service_provider_path, class: "button", data: { turbo: false } %>
        <% end %>
    <% end %>
<% end %>