<%= turbo_frame_tag 'service-offers' do %>
    <%= tag.h3 t('models.service_offer.list_title') %>
    <%= tag.table do %>
        <%= tag.thead do %>
            <%= tag.tr do %>
                <%= tag.th t('models.service.model_name') %>
                <%= tag.th t('models.service_offer.price_range') %>
                <%= tag.th %>
            <% end %>
        <% end %>
        <%= tag.tbody do %>
            <% service_provider.service_offers.each do |service_offer| %>
                <%= tag.tr id: dom_id(service_offer) do %>
                    <%= tag.td service_offer.service.label %>
                    <%= tag.td price_range(service_offer.min_price, service_offer.max_price) %>
                    <%= tag.td do %>
                        <%= tag.div class: "actions" do %>
                            <%= link_to t('keywords.edit'), edit_service_provider_service_offer_path(service_provider, service_offer), class: "button" %>
                            <%= link_to t('keywords.delete'), service_provider_service_offer_path(service_provider, service_offer), class: "button", method: :delete %>
                        <% end %>
                    <% end %>
                <% end %>
            <% end %>
            <%= turbo_frame_tag "new-service-offer" do %>
                <%= tag.tr do %>
                    <%= tag.td colspan: 3 do %>
                        <%= link_to t('models.service_offer.create_title'), new_service_provider_service_offer_path(service_provider), class: "button" %>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>